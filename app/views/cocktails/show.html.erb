<h1 class="title"><%= @cocktail.name %> </h1>

<div class="actions">
<div class="first-action"> <%= link_to 'Delete this cocktail ', cocktail_path(@cocktail), :method => 'delete',class: 'btn btn-warning' %></div>
<div class="first-action"><%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail),class: 'btn btn-success' %></div>
<div class="first-action"><%= link_to 'Go back to cocktail', cocktails_path, class: 'btn btn-primary' %></div>
</div>

<div class="banner mt-10" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @cocktail.image, :crop=>"fit", :effect=>"contrast:0"; %>')">
  <div class="container">
    <div class="banner-recipe">
      <h2>Recipe </h2>
      <% @cocktail.doses.each do |dose| %>
      <%= dose.ingredient.name %>
      <%= dose.description %>
      <% end %>
    </div>
  </div>
</div>

